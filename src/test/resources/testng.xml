<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite
        SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="OpenCart PW test suite" thread-count="3" parallel="tests" verbose="4">


    <test name="Opencart Homepage">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="com.qa.test.openkart.HomePageTest">
            </class>
        </classes>
    </test>


    <test name="Opencart LoginPage">
        <parameter name="browser" value="edge" />
          <classes>
            <class name="com.qa.test.openkart.LoginPageTest">
            </class>
          </classes>
    </test>


    <test name="Opencart RegPage">
        <parameter name="browser" value="chrome" />
         <classes>
            <class name="com.qa.test.openkart.RegPageTest">
            </class>
        </classes>
    </test>

<test name="Take ScreenShots">
    <parameter name="browser" value="chrome" />
    <classes>
        <class name="com.qa.test.practice.ScreenShot">
        </class>
    </classes>
</test>


</suite>